@model Pond.Web.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_AnonLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="row">
        <div class="loginColumns animated fadeInDown">
            <div class="row">
                <div class="col-sm-7">
                    <h1>Welcome to <strong>In My Pond</strong></h1>
                </div>
                <div class="col-sm-5">
                    <a href="/home/pricing" class="btn btn-lg btn-primary pull-right">
                        I want to advertise my
                        business <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <p class="lead">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras eleifend mauris ac risus
                        scelerisque sodales.
                    </p>
                    <a class="btn btn-primary" href="#!/content/marketing/about" role="button">Find out more »</a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h3 class="title-divider"><span>Login</span></h3>
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                    @Html.LabelFor(m => m.RememberMe)
                                                </div>
                                            </div>
                                        </div>
                                                <div class="form-group">
                                                    <div class="col-md-4">
                                                        <input type="submit" value="Sign in" class="btn btn btn-lg btn-success active" />
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="social-media-branding">
                                                            or sign in via &nbsp;
                                                            <a class="social-link branding-twitter" href="#" title="Twitter">
                                                                <i class="fa fa-twitter-square fa-2x"></i>
                                                            </a>
                                                            <a class="social-link branding-facebook fa-2x" href="#" title="Facebook">
                                                                <i class="fa fa-facebook-square"></i>
                                                            </a>
                                                            <a class="social-link branding-linkedin fa-2x" href="#" title="LinkedIn">
                                                                <i class="fa fa-linkedin-square"></i>
                                                            </a>
                                                            <a class="social-link branding-google-plus" href="#" title="Google Plus">
                                                                <i class="fa fa-google-plus-square fa-2x"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-8">
                                                        <a href="/#!/password/forgot">Forgot password?</a>
                                                    </div>
                                                </div>

                                                <div data-ng-show="error" class="alert alert-danger">
                                                    <strong data-ng-bind="error"></strong>
                                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!--  end col-6 -->
                <div class="col-sm-6 well well-sm">
                    <!-- ng-controller="adminController()"> -->
                    <div id="sign-up-box">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h3>New to <em>inmypond.com</em>? Sign Up!</h3>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="register_firstname">First Name</label>
                                    <input type="text" id="register_firstname" name="register_firstname" class="form-control"
                                           placeholder="Enter your first name" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="register_lastname">Last Name</label>
                                    <input type="text" id="register_lastname" name="register_lastname" class="form-control"
                                           placeholder="Enter our last name" required>
                                </div>
                            </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label for="register_email">Email address</label>
                                            <input type="email" id="register_email" name="register_email" class="form-control"
                                                   placeholder="Enter your email address"
                                                   required>
                                        </div>
                                    </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <label for="register_username">Username</label>
                                                    <input type="text" id="register_username" name="register_username" class="form-control"
                                                           placeholder="Enter a username"
                                                           required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <label for=" register_password">
                                                        Password
                                                    </label>
                                                    <input type="password" id="register_password" name="register_password"
                                                           class="form-control"
                                                           placeholder="Enter a password"
                                                           required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <button class=" btn btn-lg btn-warning" type="submit">Register</button>
                                                </div>
                                            </div>
                        }
                    </div>
                    <!--  end sign up box -->
                </div>
                <!--  end col-6 -->
            </div>

            <div class="row">
                <div class="upsell">
                    <span class="pull-right">
                        <a href="/home/pricing" class="btn btn-primary">
                            Start your Free Trial Today! <i class="fa fa-arrow-right"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
